{
  "review_settings": {
    "min_score": 70.0,
    "min_coverage": 80.0,
    "fail_on_critical": true,
    "fail_on_high": false
  },
  "severity_weights": {
    "critical": -20,
    "high": -10,
    "medium": -5,
    "low": -2,
    "info": -0.5
  },
  "coverage_thresholds": {
    "overall_min": 80.0,
    "file_min": 70.0,
    "bonus_threshold_high": 90.0,
    "bonus_threshold_medium": 80.0,
    "bonus_points_high": 5,
    "bonus_points_medium": 2
  },
  "code_quality": {
    "max_function_lines": 100,
    "max_parameters": 7,
    "max_complexity": 10,
    "enable_ruff": true,
    "enable_mypy": true,
    "enable_vulture": true
  },
  "security": {
    "check_injection": true,
    "check_credentials": true,
    "check_dangerous_functions": true,
    "dangerous_functions": [
      "eval",
      "exec",
      "__import__",
      "pickle.loads"
    ]
  },
  "mcp_compliance": {
    "require_tool_docstrings": true,
    "require_error_handling": true,
    "require_success_field": true,
    "require_error_type": true
  },
  "applescript": {
    "require_timeout": true,
    "require_timeout_handling": true,
    "require_stderr_check": true,
    "require_absolute_path": true,
    "default_timeout": 60
  },
  "documentation": {
    "require_readme": true,
    "require_docstrings": true,
    "min_docstring_length": 20,
    "required_readme_sections": [
      "installation",
      "usage",
      "features",
      "configuration"
    ]
  },
  "performance": {
    "check_inefficient_loops": true,
    "check_string_concatenation": true,
    "check_blocking_operations": true
  },
  "exclusions": {
    "paths": [
      "venv/",
      ".venv/",
      "__pycache__/",
      "*.pyc",
      ".git/",
      "build/",
      "dist/"
    ],
    "files": [
      "setup.py",
      "conftest.py"
    ]
  },
  "release_gates": {
    "minor_version": {
      "min_score": 70.0,
      "min_coverage": 80.0,
      "max_critical": 0,
      "max_high": 5
    },
    "major_version": {
      "min_score": 85.0,
      "min_coverage": 90.0,
      "max_critical": 0,
      "max_high": 0
    }
  }
}
